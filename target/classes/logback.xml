<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender - Clean UI for Progress Only -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>
    
    <!-- Progress Console Appender - Shows only progress messages -->
    <appender name="PROGRESS_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <expression>marker.contains("PROGRESS")</expression>
            </evaluator>
            <OnMatch>ACCEPT</OnMatch>
            <OnMismatch>DENY</OnMismatch>
        </filter>
    </appender>
    
    <!-- File Appender for Detailed Logs - STRICT SIZE LIMITS -->
    <appender name="DETAILED_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${run.logs.dir:-logs}/cloudsim-ho-detailed.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${run.logs.dir:-logs}/cloudsim-ho-detailed-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>5</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>
    
    <!-- Run-specific Log File Appender - SIZE LIMITED -->
    <appender name="RUN_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${run.logs.dir:-logs}/run-${run.id:-default}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${run.logs.dir:-logs}/run-${run.id:-default}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>300MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    
    <!-- Error File Appender - SIZE LIMITED -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${run.logs.dir:-logs}/errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${run.logs.dir:-logs}/errors-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>150MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>
    
    <!-- Memory Monitor Appender - SIZE LIMITED -->
    <appender name="MEMORY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${run.logs.dir:-logs}/memory-usage.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${run.logs.dir:-logs}/memory-usage-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>150MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>
    
    <!-- Performance Metrics Appender - SIZE LIMITED -->
    <appender name="PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${run.logs.dir:-logs}/performance-metrics.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${run.logs.dir:-logs}/performance-metrics-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>150MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    
    <!-- Logger Configuration -->
    
    <!-- CloudSim Plus Logging - MINIMAL LOGGING -->
    <logger name="org.cloudsimplus" level="ERROR" additivity="false">
        <appender-ref ref="DETAILED_FILE"/>
    </logger>
    <logger name="org.cloudbus.cloudsim" level="ERROR" additivity="false">
        <appender-ref ref="DETAILED_FILE"/>
    </logger>
    
    <!-- Application Loggers - REDUCED LOGGING -->
    <logger name="org.puneet.cloudsimplus.hiippo" level="WARN" additivity="false">
        <appender-ref ref="DETAILED_FILE"/>
        <appender-ref ref="RUN_LOG"/>
    </logger>
    
    <!-- Progress Logger - Shows in console -->
    <logger name="org.puneet.cloudsimplus.hiippo.util.ProgressTracker" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DETAILED_FILE"/>
        <appender-ref ref="RUN_LOG"/>
    </logger>
    
    <!-- Specialized Loggers - REDUCED LOGGING -->
    <logger name="org.puneet.cloudsimplus.hiippo.util.MemoryManager" level="WARN" additivity="false">
        <appender-ref ref="MEMORY"/>
        <appender-ref ref="DETAILED_FILE"/>
        <appender-ref ref="RUN_LOG"/>
    </logger>
    
    <logger name="org.puneet.cloudsimplus.hiippo.util.PerformanceMonitor" level="WARN" additivity="false">
        <appender-ref ref="PERFORMANCE"/>
        <appender-ref ref="DETAILED_FILE"/>
        <appender-ref ref="RUN_LOG"/>
    </logger>
    
    <!-- Root Logger - MINIMAL LOGGING -->
    <root level="WARN">
        <appender-ref ref="DETAILED_FILE"/>
        <appender-ref ref="RUN_LOG"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
</configuration>